node('asciidoc') {
    stage 'Create .html'
    sh '''make -j2 LANG=de html
make -j2 LANG=en html'''
    
    stage 'Check created .html files'
    sh '''test -e build/xhtml/de/opsi-getting-started/opsi-getting-started.html
test -e build/xhtml/en/opsi-getting-started/opsi-getting-started.html'''
    
    stage 'Create .pdf'
    sh 'make -j2 LANG=de pdf'
    sh 'make -j2 LANG=en pdf'
    
    stage 'Create .epub'
    sh 'make -j2 LANG=de epub'
    sh 'make -j2 LANG=en epub'
    
    stage 'Test image paths'
    sh 'make check'
    
    stage 'Create archive'
    sh 'make rename'
    sh 'tar -czvf opsidoc-complete.tar.gz pub/*'
    archive 'opsidoc-complete.tar.gz'
}
